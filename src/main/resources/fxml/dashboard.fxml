<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.controller.DashboardController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <top>
            <HBox alignment="CENTER_RIGHT" prefHeight="60.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="welcomeLabel" text="Dashboard">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="userDisplayName" text="Admin">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: transparent;" text="Logout" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
         </top>
         <left>
            <VBox prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2);" BorderPane.alignment="CENTER">
               <children>
                  <Label text="E-Commerce Admin" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="menuListView" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </ListView>
                  <Button fx:id="logoutSidebarButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Logout" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
               <content>
                  <VBox spacing="20.0" style="-fx-padding: 20;">
                     <children>
                        <Label text="Dashboard Overview" textFill="#333333">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label text="Welcome back! Here's what's happening with your store today." textFill="#666666">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        
                        <!-- Stats Cards -->
                        <HBox spacing="20.0">
                           <children>
                              <VBox fx:id="totalOrdersCard" alignment="CENTER" prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: #007bff; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                                 <children>
                                    <Label text="Shopping Cart" textFill="WHITE">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="totalOrdersLabel" text="0" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="24.0" />
                                       </font>
                                    </Label>
                                    <Label text="Total Orders" textFill="WHITE">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              <VBox fx:id="totalRevenueCard" alignment="CENTER" prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: #28a745; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                                 <children>
                                    <Label text="Dollar Sign" textFill="WHITE">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="totalRevenueLabel" text="$0" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="24.0" />
                                       </font>
                                    </Label>
                                    <Label text="Total Revenue" textFill="WHITE">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              <VBox fx:id="totalCustomersCard" alignment="CENTER" prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: #17a2b8; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                                 <children>
                                    <Label text="Users" textFill="WHITE">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="totalCustomersLabel" text="0" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="24.0" />
                                       </font>
                                    </Label>
                                    <Label text="Total Customers" textFill="WHITE">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              <VBox fx:id="totalProductsCard" alignment="CENTER" prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: #ffc107; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                                 <children>
                                    <Label text="Box" textFill="WHITE">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="totalProductsLabel" text="0" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="24.0" />
                                       </font>
                                    </Label>
                                    <Label text="Total Products" textFill="WHITE">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </HBox>
                        
                        <!-- Recent Orders and Products -->
                        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <!-- Recent Orders Table -->
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Recent Orders" textFill="#333333">
                                       <font>
                                          <Font name="System Bold" size="18.0" />
                                       </font>
                                    </Label>
                                    <TableView fx:id="ordersTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TableColumn fx:id="orderIdCol" prefWidth="100.0" text="Order ID" />
                                        <TableColumn fx:id="customerCol" prefWidth="150.0" text="Customer" />
                                        <TableColumn fx:id="dateCol" prefWidth="120.0" text="Date" />
                                        <TableColumn fx:id="amountCol" prefWidth="100.0" text="Amount" />
                                        <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status" />
                                        <TableColumn fx:id="actionsCol" prefWidth="120.0" text="Actions" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                              
                              <!-- Recent Products -->
                              <VBox prefWidth="300.0">
                                 <children>
                                    <Label text="Recent Products" textFill="#333333">
                                       <font>
                                          <Font name="System Bold" size="18.0" />
                                       </font>
                                    </Label>
                                    <ListView fx:id="productsList" prefHeight="300.0" VBox.vgrow="ALWAYS" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </children>
</VBox>