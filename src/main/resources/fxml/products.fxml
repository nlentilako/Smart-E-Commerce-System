<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.controller.JavaFXProductsController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <top>
            <HBox alignment="CENTER_RIGHT" prefHeight="60.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Products Management">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="userDisplayName" text="Admin">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: transparent;" text="Logout" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
         </top>
         <left>
            <VBox prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2);" BorderPane.alignment="CENTER">
               <children>
                  <Label text="E-Commerce Admin" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="menuListView" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </ListView>
                  <Button fx:id="logoutSidebarButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Logout" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <VBox spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Product Management" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Manage your products and inventory" textFill="#666666">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
                  
                  <!-- Search and Add Product -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <TextField fx:id="searchField" prefWidth="300.0" promptText="Search products..." />
                              <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" text="Search">
                                 <graphic>
                                    <Label text="ðŸ”" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                        <Button fx:id="addProductButton" mnemonicParsing="false" onAction="#handleAddProduct" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2); -fx-text-fill: white;" text="+ Add Product">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Products Table -->
                  <TableView fx:id="productsTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="productIdCol" prefWidth="100.0" text="Product ID" />
                      <TableColumn fx:id="nameCol" prefWidth="200.0" text="Name" />
                      <TableColumn fx:id="categoryCol" prefWidth="150.0" text="Category" />
                      <TableColumn fx:id="priceCol" prefWidth="100.0" text="Price" />
                      <TableColumn fx:id="stockCol" prefWidth="100.0" text="Stock" />
                      <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status" />
                      <TableColumn fx:id="actionsCol" prefWidth="150.0" text="Actions" />
                    </columns>
                    <VBox.margin>
                       <Insets left="20.0" right="20.0" />
                    </VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</VBox>